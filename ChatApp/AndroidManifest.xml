<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chatapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="1"
        android:targetSdkVersion="18" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.chatapp.MainPage"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.chatapp.ChatApp"
            android:label="@string/title_activity_main_page" >
        </activity>
        <activity
            android:name="com.example.chatapp.Login"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.example.chatapp.AddContact"
            android:label="@string/title_activity_add_contact" >
        </activity>
        <activity
            android:name="com.example.chatapp.Contacts"
            android:label="@string/title_activity_contacts" >
        </activity>
        <activity
            android:name="com.example.chatapp.MessageSendArea"
            android:label="@string/title_activity_message_send_area" >
        </activity>
    </application>

</manifest>
